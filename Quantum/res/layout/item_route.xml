<?xml version="1.0" encoding="UTF-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <RelativeLayout
        style="@style/item"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/linerlayout"
            android:layout_width="match_parent"
            android:layout_height="300dp" >

            <com.apn.ui.Web
                android:id="@+id/item_webMap"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/linerlayout"
            android:background="#fff"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/item_taxi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="12sp"
                android:paddingLeft="10sp"
                android:paddingTop="9sp"
                android:text=""
                android:textColor="#AA66CC"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#fff"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/item_title"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10sp"
                    android:paddingTop="5sp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#FF4444" />

                <TextView
                    android:id="@+id/item_title_s"
                    style="@style/list_view_text_un"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5sp"
                    android:paddingLeft="10sp" />
            </LinearLayout>
 
            <ImageButton
                android:id="@+id/but_mode"
                android:layout_width="50dp"
                android:layout_height="fill_parent"
                android:background="@drawable/button_styles"
                android:gravity="center_vertical|center"
                android:src="@drawable/ic_training_bike_pressed"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@drawable/button_color" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linear_mode"
        style="@style/item"
        android:layout_width="fill_parent"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:alpha="0.9"
        android:background="#fff"
        android:orientation="vertical"
        android:visibility="gone" >

        <TextView
            android:id="@+id/TextView01"
            style="@style/list_view_text_un"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:paddingLeft="10sp"
            android:paddingTop="8sp"
            android:text="选择出行方式"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/but_mode_walk"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/button_styles"
                android:gravity="center_vertical|center"
                android:src="@drawable/ic_training_walking_normal"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@drawable/button_color" />

            <View
                android:layout_width="1sp"
                android:layout_height="fill_parent"
                android:background="?android:attr/listDivider" />

            <ImageButton
                android:id="@+id/but_mode_bike"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/button_styles"
                android:gravity="center_vertical|center"
                android:src="@drawable/ic_training_bike_normal"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@drawable/button_color" />

            <View
                android:layout_width="1sp"
                android:layout_height="fill_parent"
                android:background="?android:attr/listDivider" />

            <ImageButton
                android:id="@+id/but_mode_car"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/button_styles"
                android:gravity="center_vertical|center"
                android:src="@drawable/ic_training_driving_normal"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@drawable/button_color" />

            <View
                android:layout_width="1sp"
                android:layout_height="fill_parent"
                android:background="?android:attr/listDivider" />

            <ImageButton
                android:id="@+id/but_mode_trans"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/button_styles"
                android:gravity="center_vertical|center"
                android:src="@drawable/ic_training_transit_normal"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@drawable/button_color" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>